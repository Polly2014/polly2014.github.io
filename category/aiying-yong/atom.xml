&lt;&#x2F;span&gt;&lt;span&gt;        presentation = &lt;&#x2F;span&gt;&lt;span style=&quot;color:#bf616a;&quot;&gt;Presentation&lt;&#x2F;span&gt;&lt;span&gt;(file_path)
&lt;&#x2F;span&gt;&lt;span&gt;        slides_content = []
